<UserControl x:Class="uOrder.YourOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:uOrder"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="950">
    <Grid>
        <StackPanel Grid.Column="1">
            <Label FontSize="24" Content="YOUR ORDER" FontWeight="Bold" Margin="8,0,728,0" />
            <ScrollViewer Height="560"  Width="881" VerticalScrollBarVisibility="Hidden" Background="White">
                <StackPanel Margin="10,0" Name="order_stack">

                </StackPanel>
            </ScrollViewer>
            <Label Name="sub_label" Content="Subtotal: $0.00" FontSize="14" Margin="781,15,15,0" HorizontalContentAlignment="Right"/>
            <Label Name="gst_label" Content="GST: $0.00" FontSize="14" Margin="806,0,15,0" HorizontalContentAlignment="Right"/>
            <Label Name="tot_label" Content="Total: $0.00" FontSize="20" Margin="775,0,15,0" HorizontalContentAlignment="Right"/>
            <Button Name="order" Content="Place Order" Height="40" Margin="715,0,15,0" FontSize="22" Foreground="White" VerticalContentAlignment="Center" Background="DarkRed"/>
        </StackPanel>
    </Grid>
</UserControl>
