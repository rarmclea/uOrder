<UserControl x:Class="uOrder.OrderItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:uOrder"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="875">
    <Grid>
        <StackPanel Margin="10,10,250,10">
            <Label Name="item_title" FontSize="22" Margin="0" HorizontalContentAlignment="Left"/>
            <TextBlock Name="addOn_details" FontSize="18" Margin="15,0" HorizontalAlignment="Left" Visibility="Collapsed"/>
            <TextBlock Name="drop_details" FontSize="18" Margin="15,0" HorizontalAlignment="Left" Visibility="Collapsed"/>
            <TextBlock Name="item_details" FontSize="18" FontStyle="Italic" HorizontalAlignment="Left" Margin="15,0" Foreground="DarkRed"/>

        </StackPanel>
        <Label Name="item_price" FontSize="18" Margin="648,0,121.2,88.4" Height="52" VerticalAlignment="Bottom"/>
        <Button Background="DarkRed" Foreground="White" Content="Remove" Click="Button_Click" Margin="759,10,10.2,0" FontSize="20" Height="52" VerticalAlignment="Top"/>
        <Rectangle Height="1" Fill="Gray" Margin="0,146,0.2,3.4"/>
    </Grid>
</UserControl>
